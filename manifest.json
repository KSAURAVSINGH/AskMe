{
    "manifest_version": 2,
    "name": "AskMe",
    "version": "1.0.0",
    "description": "A smart engine to answer your questions",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "icons": {
        "128" : "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Easy Text Saver"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
        }
}
  